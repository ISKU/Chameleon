<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:ignore="UnusedAttribute"
    android:background="#aebec5"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp"
        android:scrollbarStyle="outsideOverlay"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onDynamicListViewClicked"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="top|left"
            android:layout_margin="10dp"
            android:background="#fff">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="235dp"
                android:padding="0dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_margin="0dp">

                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="0dp" />

            </FrameLayout>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/current_location__button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="15dp"
                android:layout_gravity="right|bottom"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="current location"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:typeface="serif" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="700dp"
                android:background="#aebec5"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="17.50"
                android:layout_gravity="center_horizontal|bottom">

                <com.fenjuly.mylibrary.ToggleExpandLayout
                    android:id="@+id/toogleLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="240dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:id="@+id/id2"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:background="#ffffff"
                        android:elevation="2dp"
                        android:outlineProvider="bounds"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/dateList"
                            android:onClick="selectDate"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/first_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="8dp"
                                android:text="Set date"
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:typeface="serif" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/next"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="false"
                                android:layout_alignParentLeft="false"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView4"
                                android:background="@drawable/line"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id3"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:background="#ffffff"
                        android:elevation="3dp"
                        android:outlineProvider="bounds"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeList"
                            android:nestedScrollingEnabled="false"
                            android:onClick="selectTime"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/second_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="8dp"
                                android:text="Set time"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:typeface="serif" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/next"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView5"
                                android:background="@drawable/line"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id4"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:background="#ffffff"
                        android:elevation="4dp"
                        android:outlineProvider="bounds"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="8dp"
                                android:text="Select date and time"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:typeface="serif" />
                            <TextView
                                android:layout_below="@+id/menu"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select your wanting Time or Date "
                                android:textColor="#cccccc"
                                android:typeface="serif" />
                            <com.kyleduo.switchbutton.SwitchButton
                                android:id="@+id/switch_button"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="15dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView6"
                                android:background="@drawable/line"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </com.fenjuly.mylibrary.ToggleExpandLayout>


            </RelativeLayout>
        </FrameLayout>
